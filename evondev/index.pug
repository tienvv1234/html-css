        link(rel="stylesheet" href="./styles/main.css")
    body
        section.top-tours 
            .container 
                h2.heading Top Bangkok Tours 
                .tour-list 
                    +tourItem('From $40', 'Thailands Ayutthaya Temples Cruise from Bangkok', 4.8, 20, '9 hours', 55)
                    +tourItem('From $40', 'Thailands Ayutthaya Temples Cruise from Bangkok', 4.8, 20, '9 hours', 55)
                    +tourItem('From $40', 'Thailands Ayutthaya Temples Cruise from Bangkok', 4.8, 20, '9 hours', 55)
        section.popular
            .container
                h2.heading Popular things to do in Bangkok
                .popular-list
                    +popularItem
                    +popularItem
                    +popularItem
                    +popularItem